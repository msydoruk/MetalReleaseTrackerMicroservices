{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    ]
  },
  "Authentication": {
    "Google": {
      "ClientId": "google-client-id.apps.googleusercontent.com",
      "ClientSecret": "google-client-secret",
      "CallbackPath": "/signin-google",
      "Scopes": ["email", "profile"]
    },
    "Jwt": {
      "Issuer": "MetalReleaseTracker.CoreDataService",
      "Audience": "MetalReleaseTracker.App",
      "Key": "key-for-jwt-token-generation",
      "ExpiresMinutes": 60,
      "RefreshTokenExpirationDays": 7
    }
  },
  "Kafka": {
    "BootstrapServers": "localhost:9093",
    "CatalogSyncServiceConsumerGroup": "albums-processed-consumer-group",
    "CatalogSyncServiceTopic": "albums-processed-topic",
    "Security": {
      "Username": "",
      "Password": "",
      "Mechanism": "",
      "SaslProtocol": "Plaintext"
    }
  },
  "ConnectionStrings": {
    "CoreDataServiceConnectionString": "Host=localhost;Port=5436;Database=CoreDataServiceDb;Username=admin;Password=;"
}
}