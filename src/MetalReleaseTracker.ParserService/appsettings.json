    "MinImageSizeBytes": 4,
    "ImageStorageFolder": "images",
    "TimestampFormat": "yyyyMM",
    "DefaultFileName": "unknown",
    "DefaultImageExtension": ".jpg",
    "SupportedExtensions": {
      ".jpg": ".jpg",
      ".jpeg": ".jpg",
      ".png": ".png",
      ".webp": ".webp",
      ".gif": ".gif"
    }
  },
